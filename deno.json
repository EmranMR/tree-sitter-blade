{
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": [
      "tree-sitter-cli/dsl"
    ]
  },
  "tasks": {
    "bundle": "deno -A ./main/bundle.ts",
    "test": "deno test main/",
    "test-grammar": {
      "command": "npx tree-sitter test",
      "dependencies": [
        "bundle",
        "generate"
      ]
    },
    "prse": {
      "command": "tree-sitter parse example.blade.php",
      "dependencies": [
        "bundle",
        "generate"
      ]
    },
    "generate": {
      "command": "deno task build",
      "dependencies": [
        "bundle"
      ]
    }
  }
}
